<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Home - Preguntados</title>

    <link rel="stylesheet" href="http://localhost:8012/PROYECTO_PREGUNTADOS/public/css/preguntasStyles.css">
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous">
</head>
<h2>Partida Activa - Puntaje: {{puntaje}}</h2>

<body>

<h2>Partida en curso</h2>
<div id="cronometro">10</div>

<div class="barra-container">
    <div class="barra" id="barra"></div>
</div>



{{#feedback}}
    <div style="color: green; font-weight: bold; margin-bottom: 10px;">{{feedback}}</div>
{{/feedback}}

<div class="pregunta-card p-5 border border-3 rounded">
    <p class="categoria">Categor√≠a: <strong>{{categoria}}</strong></p>
    <h3 class="pregunta">{{pregunta}}</h3>
    
    <form action="{{basePath}}PartidaController/responder" method="POST">
        <div class="respuestas-grid d-flex flex-column">
            {{#respuestas}}
            <button type="submit" name="respuestaId" value="{{id_respuesta}}" class="btn btn-secondary mt-2">
                {{respuesta}}
            </button>
            {{/respuestas}}
        </div>
    </form>
</div>
<script>
    let tiempoRestante = 10; // segundos
    const cronometro = document.getElementById("cronometro");
    const barra = document.getElementById("barra");

    // Actualiza cada segundo
    const intervalo = setInterval(() => {
        tiempoRestante--;
        cronometro.textContent = tiempoRestante;

        // Calcular porcentaje restante
        const porcentaje = ((tiempoRestante / 10) * 100) - 10;
        barra.style.width = porcentaje + "%";

        // Cambiar color cuando se acerca al final
        if (tiempoRestante <= 3) {
            barra.style.backgroundColor = "#E53935"; // rojo
        } else if (tiempoRestante <= 6) {
            barra.style.backgroundColor = "#FFB300"; // amarillo
        }

        // Cuando llega a 0, redirige
        if (tiempoRestante <= 0) {
            clearInterval(intervalo);
            window.location.href = "http://localhost:8012/PROYECTO_PREGUNTADOS/PartidaController/responder/1";
        }
    }, 1000);
</script>

</body>
</html>