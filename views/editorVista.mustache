        const style = 'background: #48bb78; color: white; padding: 16px 24px; border-radius: 12px; font-size: 16px; font-weight: 600;';
        console.log('%c‚úî Categor√≠a creada correctamente', style);
        alert("‚úî Categor√≠a creada correctamente");
