        const style = 'background: #fc8181; color: white; padding: 16px 24px; border-radius: 12px; font-size: 16px; font-weight: 600;';
        console.log('%c‚ùå Error: Ya existe una categor√≠a con ese nombre', style);
        alert("‚ùå Error: Ya existe una categor√≠a con ese nombre.");
    </script>
{{/error_categoria}}

