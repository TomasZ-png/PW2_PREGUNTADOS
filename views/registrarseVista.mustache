<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro - Preguntame</title>
    <link rel="stylesheet" href="{{BASE_URL}}public/css/loginStyles.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <link rel="icon" type="image/png" href="{{BASE_URL}}public/img/preguntame-logo-solo.png">
</head>
<body>

<div class="form-wrapper">
    <div class="logo-container">
        <img src="{{BASE_URL}}public/img/preguntame-logo.png" alt="Preguntame Logo">
    </div>

    <div class="form-container">
        <div class="form-header">
            <h1>¬°Cre√° tu cuenta!</h1>
            <p>Unite a la comunidad de Preguntame</p>
        </div>

        <form action="{{BASE_URL}}LoginController/registrarse" method="post" enctype="multipart/form-data">
            <div class="form-grid">
                <!-- Columna Izquierda -->
                <div class="form-section">
                    <div class="form-group">
                        <label for="name">Nombre completo</label>
                        <input type="text" name="name" id="name" placeholder="Ingres√° tu nombre" required>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="fecha_nac">Fecha de nacimiento</label>
                            <input type="date" name="fecha_nac" id="fecha_nac" required>
                        </div>
                        <div class="form-group">
                            <label for="sexo">Sexo</label>
                            <select name="sexo" id="sexo" required>
                                <option value="" disabled selected>Seleccion√°</option>
                                <option value="masculino">Masculino</option>
                                <option value="femenino">Femenino</option>
                                <option value="no-aclarado">Prefiero no cargarlo</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email">Correo electr√≥nico</label>
                        <input type="email" name="email" id="email" placeholder="tu@email.com" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Contrase√±a</label>
                        <input type="password" name="password" id="password" placeholder="M√≠nimo 8 caracteres, un numero y una mayuscula" required>
                    </div>

                    <div class="form-group">
                        <label>Foto de perfil</label>
                        <div class="file-input-wrapper">
                            <div class="file-input-label">
                                <span>üì∑</span>
                                <span id="file-name">Elegir imagen</span>
                            </div>
                            <input type="file" name="user_photo" id="foto-perfil" accept="image/*">
                        </div>
                    </div>
                </div>

                <!-- Columna Derecha - Mapa -->
                <div class="form-section">
                    <div class="map-container">
                        <label style="color: #2d3748; font-weight: 600; font-size: 14px; margin-bottom: 10px; display: block;">
                            üìç Seleccion√° tu ubicaci√≥n
                        </label>
                        <div id="map"></div>

                        <input type="hidden" id="latitud" name="latitud">
                        <input type="hidden" id="longitud" name="longitud">
                        <input type="hidden" id="inputCiudad" name="ciudad">
                        <input type="hidden" id="inputPais" name="pais">

                        <div class="location-info">
                            <div class="location-badge">
                                <strong>Ciudad</strong>
                                <span id="ciudad">Hac√© clic en el mapa</span>
                            </div>
                            <div class="location-badge">
                                <strong>Pa√≠s</strong>
                                <span id="pais">‚Äî</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Errores -->
                <div id="errores-contenedor"></div>
                {{#errores}}
                    <p class="errores">{{.}}</p>
                {{/errores}}

                <!-- Bot√≥n Submit -->
                <button type="submit" class="btn-submit">Crear cuenta</button>
            </div>

            <div class="login-link">
                ¬øYa ten√©s una cuenta? <a href="{{BASE_URL}}LoginController/login">Inici√° sesi√≥n</a>
            </div>
        </form>
    </div>
</div>

<script>
    // Mostrar nombre de archivo seleccionado
    document.getElementById('foto-perfil').addEventListener('change', function(e) {
        const fileName = e.target.files[0]?.name || 'Elegir imagen';
        document.getElementById('file-name').textContent = fileName;
    });

    // AJAX Form Submit
    document.addEventListener('DOMContentLoaded', () => {
        const BASE_URL = "{{{BASE_URL}}}";
        const form = document.querySelector('form');
        const errores_container = document.querySelector('#errores-contenedor');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            errores_container.innerHTML = '';

            const dataFormulario = new FormData(form);

            try {
                const res = await fetch(BASE_URL + "LoginController/registrarseConAjax", {
                    method: 'POST',
                    body: dataFormulario
                });

                const data = await res.json();

                if (!data.exito) {
                    if (data.errores && Array.isArray(data.errores)) {
                        data.errores.forEach(err => {
                            const p = document.createElement('p');
                            p.classList.add('errores');
                            p.innerText = err;
                            errores_container.appendChild(p);
                        });
                    }
                    return;
                }

                window.location.href = BASE_URL + "LoginController/registroExitoso";

            } catch (error) {
                console.error("Error en fetch:", error);
            }
        });
    });

    // Mapa Leaflet
    let map = L.map('map').setView([-34.6037, -58.3816], 13);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
    }).addTo(map);

    let marker;

    map.on('click', function(e) {
        let lat = e.latlng.lat;
        let lng = e.latlng.lng;

        if (marker) {
            map.removeLayer(marker);
        }

        marker = L.marker([lat, lng]).addTo(map);

        document.getElementById("latitud").value = lat;
        document.getElementById("longitud").value = lng;

        fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}`)
                .then(response => response.json())
                .then(data => {
                    const ciudad = data.address.city || data.address.town || data.address.village || "Desconocida";
                    const pais = data.address.country || "Desconocido";

                    document.getElementById("ciudad").innerText = ciudad;
                    document.getElementById("pais").innerText = pais;
                    document.getElementById("inputCiudad").value = ciudad;
                    document.getElementById("inputPais").value = pais;
                });
    });
</script>

</body>
</html>