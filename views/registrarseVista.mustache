<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registro</title>
    <link rel="stylesheet" href="{{BASE_URL}}public/css/loginStyles.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</head>

<body>
<div class="animated-bg">
    <div class="blob"></div>
    <div class="blob"></div>
    <div class="blob"></div>
    <div class="blob"></div>
    <div class="blob"></div>
    <div class="blob"></div>
    <div class="blob"></div>
    <div class="blob"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
</div>

<div id="form-container">
    <div id="left-container">
        <div id="logo-conteiner">
            <img src="{{BASE_URL}}public/img/preguntame-logo.png" width="400">
        </div>
    </div>

    <div class="right-container glass">
        <div id="title-conteiner">
            <h1>Bienvenido!</h1>
        </div>
        <form action="{{BASE_URL}}LoginController/registrarse" method="post" enctype="multipart/form-data">

            <div id="inputs-conteiner">
                <label for="name">Nombre completo</label>
                <input type="text" name="name" id="name" placeholder="Nombre completo">
                <div class="flex">
                    <div class="flex-column">
                        <label for="fecha_nac">Fecha de nacimiento</label>
                        <input type="date" name="fecha_nac" id="fecha_nac" placeholder="Fecha de nacimiento">
                    </div>
                    <div class="flex-column">
                        <label for="sexo">Sexo</label>
                        <select name="sexo" id="sexo">
                            <option value="" disabled selected>-- Seleccione su sexo --</option>
                            <option value="masculino">Masculino</option>
                            <option value="femenino">Femenino</option>
                            <option value="no-aclarado">Prefiero no cargarlo</option>
                        </select>
                    </div>
                </div>
                <label for="email">Correo</label>
                <input type="text" name="email" id="email" placeholder="Email">
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Contraseña">
                <label for="foto-perfil">Foto de perfil</label>
                <input type="file" name="user_photo" id="foto-perfil">

                <label>Direccion:</label>
                <div id="map" style="height: 400px; border-radius: 10px; margin-top: 20px;"></div>

                <input type="hidden" id="latitud" name="latitud">
                <input type="hidden" id="longitud" name="longitud">
                <input type="hidden" id="inputCiudad" name="ciudad">
                <input type="hidden" id="inputPais" name="pais">
                <span style="font-size: 20px">Ciudad: <span id="ciudad">—</span></span>
                <span style="font-size: 20px">País: <span id="pais">—</span></span>

            </div>

            {{#errores}}
                <p class="errores">{{.}}</p>
            {{/errores}}

            <div id="errores-contenedor"></div>


            <div id="buttons-conteiner">
                <button type="submit" class="btn">Registrarse</button>
            </div>

            <div id="registrar-conteiner">
                <p>Ya tenes una cuenta? <a href="{{BASE_URL}}LoginController/login">Inicia sesion</a></p>
            </div>
        </form>
    </div>


</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {

        const BASE_URL = "{{{BASE_URL}}}";
        const form = document.querySelector('form');
        const errores_container = document.querySelector('#errores-contenedor');

        console.log(BASE_URL);

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            // Limpio errores anteriores SIEMPRE
            errores_container.innerHTML = '';

            const dataFormulario = new FormData(form);



            try {
                const res = await fetch(BASE_URL+"LoginController/registrarseConAjax", {
                    method: 'POST',
                    body: dataFormulario
                });

                const data = await res.json();

                // Si hubo errores → los muestro
                if (!data.exito) {
                    if (data.errores && Array.isArray(data.errores)) {
                        data.errores.forEach(err => {
                            const p = document.createElement('p');
                            p.classList.add('errores');
                            p.innerText = err;
                            errores_container.appendChild(p);
                        });
                    }
                    return; // corto acá
                }

                // Si salió
                window.location.href = BASE_URL+"LoginController/registroExitoso";

            } catch (error) {
                console.error("Error en fetch:", error);
            }
        });

    });
</script>
<script>
    let map = L.map('map').setView([-34.6037, -58.3816], 13);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
    }).addTo(map);

    let marker;

    map.on('click', function(e) {
        let lat = e.latlng.lat;
        let lng = e.latlng.lng;

        if (marker) {
            map.removeLayer(marker);
        }

        marker = L.marker([lat, lng]).addTo(map);

        document.getElementById("latitud").value = lat;
        document.getElementById("longitud").value = lng;

        fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}`)
                .then(response => response.json())
                .then(data => {
                    console.log(data);

                    // Extraer ciudad y país
                    const ciudad = data.address.city || data.address.town || data.address.village || "Desconocida";
                    const pais = data.address.country || "Desconocido";

                    // Mostrar en pantalla
                    document.getElementById("ciudad").innerText = ciudad;
                    document.getElementById("pais").innerText = pais;

                    // Opcional: guardar oculto para enviarlo al backend
                    document.getElementById("inputCiudad").value = ciudad;
                    document.getElementById("inputPais").value = pais;
                });
    });
</script>
</body>
</html>