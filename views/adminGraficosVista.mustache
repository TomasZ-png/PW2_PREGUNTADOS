<script>
    document.getElementById('filtroTiempo').addEventListener('change', function () {
        document.getElementById('filtroForm').submit();
    });

    // Recibir datos desde PHP ya codificados como JSON
    const datosSexo = {{{datosSexo}}};
    const datosPreguntas = {{{datosPreguntas}}};
    const datosPuntaje = {{{puntajeGlobal}}};
    const cantidadUsuarios = {{cantidadUsuarios}};
    const cantidadPartidas = {{cantidadPartidas}};
    const cantidadPreguntasCreadas = {{cantidadPreguntasCreadas}};
    const cantidadPreguntasTotales = {{cantidadPreguntasTotales}};
    const datosEdades = {{{usuariosPorEdad}}};
    const datosPais = {{{usuariosPorPais}}};
    const datosUsuariosNuevos = {{{usuariosNuevos}}};

    google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(dibujarGraficos);

    let chartSexo, chartPreg, chartPuntaje;
let chartUsuarios, chartPartidas, chartPreguntasCreadas, chartPreguntasTotales;
let chartEdades, chartPais, chartUsuariosNuevos;


    function dibujarGraficos() {

    // ------------------------------
    // GRAFICO DE SEXO
    // ------------------------------

    let dataSexo = new google.visualization.DataTable();
    dataSexo.addColumn('string', 'Sexo');
    dataSexo.addColumn('number', 'Cantidad');

    for (let key in datosSexo) {
        dataSexo.addRow([key, datosSexo[key]]);
    }

    chartSexo = new google.visualization.PieChart(
        document.getElementById('grafico_sexo')
    );

    chartSexo.draw(dataSexo, {
        title: '',
        pieHole: 0.4,
        colors: ['#667eea', '#764ba2', '#f6ad55', '#fc8181'],
        legend: { position: 'bottom', textStyle: { fontSize: 14 } },
        pieSliceTextStyle: { color: 'white', fontSize: 16 },
        chartArea: { width: '90%', height: '80%' }
    });

    // ------------------------------
    // GRAFICO DE PREGUNTAS
    // ------------------------------
    let dataPreg = new google.visualization.DataTable();
    dataPreg.addColumn('string', 'Pregunta');
    dataPreg.addColumn('number', 'Errores');
    dataPreg.addColumn('number', 'Acertadas');

    datosPreguntas.forEach(p => {
        dataPreg.addRow([p.pregunta, p.erroneas, p.acertadas]);
    });

    chartPreg = new google.visualization.ColumnChart(
        document.getElementById('grafico_preguntas')
    );

    chartPreg.draw(dataPreg, {
        title: '',
        legend: { position: 'top', textStyle: { fontSize: 14 } },
        bar: { groupWidth: "70%" },
        colors: ['#e74c3c', '#2ecc71'],
        chartArea: { width: '85%', height: '70%' },
        hAxis: { textStyle: { fontSize: 12 } },
        vAxis: { textStyle: { fontSize: 12 } }
    });

    // ------------------------------
    // GRAFICO DE PUNTAJE GLOBAL
    // ------------------------------
    let dataPuntaje = new google.visualization.DataTable();
    dataPuntaje.addColumn('string', 'Usuario');
    dataPuntaje.addColumn('number', 'Puntaje');

    for (let i = 1; i < datosPuntaje.length; i++) {
        let fila = datosPuntaje[i];
        dataPuntaje.addRow([fila[0], fila[1]]);
    }

    chartPuntaje = new google.visualization.ColumnChart(
        document.getElementById('grafico_puntaje')
    );

    chartPuntaje.draw(dataPuntaje, {
        title: '',
        legend: { position: 'none' },
        colors: ['#667eea'],
        bar: { groupWidth: "70%" },
        chartArea: { width: '85%', height: '75%' },
        hAxis: { textStyle: { fontSize: 12 } },
        vAxis: { textStyle: { fontSize: 12 } }
    });

    // ------------------------------
    // GRAFICO DE USUARIOS TOTALES
    // ------------------------------

    let dataUsuarios = google.visualization.arrayToDataTable([
        ['Usuarios', 'Cantidad'],
        ['Registrados', cantidadUsuarios]
    ]);

    chartUsuarios = new google.visualization.ColumnChart(
        document.getElementById('grafico_usuarios_totales')
    );

    chartUsuarios.draw(dataUsuarios, {
        title: 'Usuarios Totales',
        pieHole: 0.4,
        colors: ['#36A2EB'],
        legend: { position: 'bottom', textStyle: { fontSize: 14 } },
        pieSliceTextStyle: { color: 'white', fontSize: 16 },
        chartArea: { width: '90%', height: '80%' }
    });

    // ------------------------------
    // GRAFICO DE PARTIDAS TOTALES
    // ------------------------------

    let dataPartidas = google.visualization.arrayToDataTable([
        ['Partidas', 'Cantidad'],
        ['Jugadas', cantidadPartidas]
    ]);

    chartPartidas = new google.visualization.ColumnChart(
        document.getElementById('grafico_partidas_totales')
    );

    chartPartidas.draw(dataPartidas, {
        title: 'Partidas Totales',
        pieHole: 0.4,
        colors: ['#FF6384'],
        legend: { position: 'bottom', textStyle: { fontSize: 14 } },
        pieSliceTextStyle: { color: 'white', fontSize: 16 },
        chartArea: { width: '90%', height: '80%' }
    });

    // ------------------------------
    // GRAFICO DE PREGUNTAS CREADAS
    // ------------------------------

    let dataPreguntasCreadas = google.visualization.arrayToDataTable([
        ['Pregunta', 'Cantidad'],
        ['Creadas', cantidadPreguntasCreadas]
    ]);

    chartPreguntasCreadas = new google.visualization.ColumnChart(
        document.getElementById('grafico_preguntas_creadas')
    );

    chartPreguntasCreadas.draw(dataPreguntasCreadas, {
        title: 'Preguntas Creadas',
        pieHole: 0.4,
        colors: ['#FF6384'],
        legend: { position: 'bottom', textStyle: { fontSize: 14 } },
        pieSliceTextStyle: { color: 'white', fontSize: 16 },
        chartArea: { width: '90%', height: '80%' }
    });

    // ------------------------------
    // GRAFICO DE PREGUNTAS TOTALES
    // ------------------------------

    let dataPreguntasTotales = google.visualization.arrayToDataTable([
        ['Pregunta', 'Cantidad'],
        ['Totales', cantidadPreguntasTotales]
    ]);

    chartPreguntasTotales = new google.visualization.PieChart(
        document.getElementById('grafico_preguntas_totales')
    );

    chartPreguntasTotales.draw(dataPreguntasTotales, {
        title: 'Preguntas Creadas Totales',
        pieHole: 0.4,
        colors: ['#FF6384'],
        legend: { position: 'bottom', textStyle: { fontSize: 14 } },
        pieSliceTextStyle: { color: 'white', fontSize: 16 },
        chartArea: { width: '90%', height: '80%' }
    });

    // ------------------------------
    // GRAFICO DE EDADES
    // ------------------------------

    let dataEdades = google.visualization.arrayToDataTable(datosEdades);

    let options = {
        title: 'Usuarios por Grupo de Edad',
        legend: { position: 'none' },
        hAxis: { title: 'Grupo' },
        vAxis: { title: 'Cantidad' },
        colors: ['#4285F4']
    };

    chartEdades = new google.visualization.ColumnChart(
        document.getElementById('graficoEdad')
    );

    chartEdades.draw(dataEdades, options);

    // ------------------------------
    // GRAFICO DE JUGADORES POR PA√çS
    // ------------------------------
    let dataPais = google.visualization.arrayToDataTable(datosPais);

    let opcionesPais = {
        title: 'Jugadores por Pa√≠s',
        legend: { position: 'none' },
        hAxis: {
            title: 'Pa√≠s',
            textStyle: { fontSize: 12 }
        },
        vAxis: {
            title: 'Cantidad',
            minValue: 0
        },
        colors: ['#34a853'],
        chartArea: { width: '85%', height: '70%' }
    };

    chartPais = new google.visualization.ColumnChart(
        document.getElementById('graficoPais')
    );

    chartPais.draw(dataPais, opcionesPais);

    // ------------------------------
    // GRAFICO DE USUARIOS NUEVOS
    // ------------------------------
    let dataUsuariosNuevos = new google.visualization.DataTable();
    dataUsuariosNuevos.addColumn('string', 'D√≠a');
    dataUsuariosNuevos.addColumn('number', 'Usuarios Nuevos');

    datosUsuariosNuevos.forEach(row => {
        dataUsuariosNuevos.addRow([row.dia, parseInt(row.cantidad)]);
    });

    chartUsuariosNuevos = new google.visualization.ColumnChart(
        document.getElementById('graficoUsuariosNuevos')
    );

    chartUsuariosNuevos.draw(dataUsuariosNuevos, {
        title: '',
        legend: { position: 'none' },
        colors: ['#1E88E5'],
        hAxis: { title: 'D√≠a' },
        vAxis: { title: 'Usuarios Nuevos', minValue: 0 },
        chartArea: { width: '85%', height: '70%' }
    });

}




    // ------------------------------
    // DESCARGA DE PDF (SEXOS)
    // ------------------------------
    document.getElementById("btn_pdf_sexo").addEventListener("click", function () {
        const imgURI = chartSexo.getImageURI();
        const { jsPDF } = window.jspdf;
        const pdf = new jsPDF();

        pdf.setFontSize(18);
        pdf.text("Usuarios por Sexo - Preguntame", 105, 15, { align: 'center' });
        pdf.addImage(imgURI, 'PNG', 10, 25, 180, 120);

        pdf.setFontSize(10);
        pdf.text(`Generado el ${new Date().toLocaleString('es-AR')}`, 105, 280, { align: 'center' });

        pdf.save("preguntame_usuarios_sexo.pdf");
    });

    // ------------------------------
    // DESCARGA DE PDF (PREGUNTAS DIF√çCILES)
    // ------------------------------
    document.getElementById("btn_pdf_preguntas").addEventListener("click", function () {
        const imgURI = chartPreg.getImageURI();
        const { jsPDF } = window.jspdf;
