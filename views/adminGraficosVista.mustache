        }

        .btn-pdf:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        }

        .btn-pdf:active {
            transform: translateY(0);
        }

        .full-width-card {
            /* Asegura que estas tarjetas ocupen el ancho completo en escritorio */
            grid-column: 1 / -1; 
        }

        .stats-summary {
            background: white;
